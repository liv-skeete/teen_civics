# Flask
FLASK_ENV=production
SECRET_KEY=your_secret_key_here

# Admin Page (optional — if not set, /admin routes return 404)
ADMIN_PASSWORD=your_admin_password_here

# Google Analytics
GA_MEASUREMENT_ID=your_ga_id_here

# Supabase (or other PostgreSQL provider)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_key_here
DATABASE_URL=your_database_url_here

# For data migration scripts (if migrating from Supabase)
SUPABASE_DB_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
RAILWAY_DB_URL=postgresql://postgres:[user]:[password]@[railway-host]:[port]/railway

# Venice AI API (OpenAI-compatible)
VENICE_API_KEY=your_venice_api_key_here
VENICE_BASE_URL=https://api.venice.ai/api/v1
SUMMARIZER_MODEL=claude-sonnet-45

# Twitter API
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET_KEY=your_twitter_api_secret_key_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Bluesky (AT Protocol)
BLUESKY_HANDLE=your_handle.bsky.social
BLUESKY_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Congress.gov API
CONGRESS_API_KEY=your_congress_api_key_here

# HUD USPS Crosswalk API (optional — fallback for multi-district ZIP lookup)
HUD_API_KEY=your_hud_api_key_here

# Threads (Meta)
THREADS_USER_ID=your_threads_user_id_here
THREADS_ACCESS_TOKEN=your_threads_access_token_here