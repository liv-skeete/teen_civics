# .env.example
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://user:password@host:port/dbname

# API Keys
VENICE_API_KEY=your_venice_api_key
CONGRESS_API_KEY=your_congress_api_key

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your_secret_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Argument Generation Models (Venice AI)
# Available models: claude-sonnet-3-5, claude-sonnet-4-6, claude-opus-4-6, llama-3.3-70b
ARGUMENT_MODEL=claude-opus-4-6
ARGUMENT_FALLBACK=claude-sonnet-4-6
